#!/usr/bin/env python3
#
# Generates a static bash prompt (for now).

USER = r'\u'

# Build the output command.
COMPONENTS = (
    #r'\[\033[1;37;44m\] (' + USER + r') \[\033[m\]' + # Final prompt
    r'\[\033[48;5;240m\]\[\033[38;5;253m\]  Î»  \[\033[m\]' + # Special Symbol
    r'\[\033[48;5;243m\]\[\033[38;5;237m\] \w \[\033[m\]' + # Path
    r' ' # User input entry
)

# Output everything to stdout.
print(*COMPONENTS, sep='', end='')
