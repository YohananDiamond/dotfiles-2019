{
  /*
   * Editor Settings
   */
    "editor.renderWhitespace": "selection",
    "editor.renderControlCharacters": false,
    "editor.cursorBlinking": "phase",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "editor.detectIndentation": true,
    "editor.minimap.renderCharacters": false,
    "editor.copyWithSyntaxHighlighting": false,
    "editor.fontFamily": "'Cascadia Code', 'Droid Sans Mono', Consolas, 'Courier New', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontWeight": "800",
    "editor.fontLigatures": true,
    "editor.fontSize": 13.7,
    "zenMode.hideTabs": false,
    "zenMode.hideLineNumbers": false,

  /*
   * File Settings
   */
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,

  /*
   * Explorer Settings
   */
    "explorer.confirmDragAndDrop": false,

  /*
   * Other Settings
   */
  "telemetry.enableTelemetry": false,

  /*
   * Vim Extension Settings
   */
  "vim.easymotion": true,
  "vim.sneak": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": false,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "p"], "commands": ["editor.action.clipboardPasteAction"] },
    { "before": ["<leader>", "x"], "commands": ["editor.action.clipboardCutAction"] },
    { "before": ["<leader>", "y"], "commands": ["editor.action.clipboardCopyAction"] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    /*{ "before": ["<tab>"], "after": [">", ">"] },*/ // Removed because its equivalent (<S-Tab>) is not working yet.
    { "before": ["<leader>", "p"], "commands": ["editor.action.clipboardPasteAction"] },
    { "before": ["<leader>", "x"], "commands": ["editor.action.clipboardCutAction"] },
    { "before": ["<leader>", "y"], "commands": ["editor.action.clipboardCopyAction"] },
    { "before": ["J"], "commands": [":$"] },
    { "before": ["K"], "commands": [":0"] },
    { "before": ["<leader>", "<space>"], "commands": ["editor.toggleFold"] }
  ],
  "vim.handleKeys": {
      "<C-a>": false,
      "<C-f>": false,
      "<C-x>": true,
      "<C-v>": true,
      "<C-c>": true,
      "<C-w>": true,
      "<C-y>": false,
      "<C-r>": true
    },

    /*
     * Etc
     */
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "window.zoomLevel": 0,
    //"terminal.integrated.shellArgs.linux": ["-c", "tmux attach-session -t vscode"]
}
