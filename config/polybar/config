;; Yohanan's Polybar Config
;; ...
;; 
;; NOTES
;; Transparency colors are #ARGB, not #RGBA

[colors]
;; TODO: Change this soon
background = #CC222222
background-alt = #666666
foreground = #DFDFDF
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
width = 100%
height = 25
radius = 0

bottom = false

override-redirect = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 0
line-color = #f00
border-size = 0
border-color = #00000000

padding-left = 0
padding-top = 0
padding-right = 2

font-0 = "FontAwesome:pixelsize=10;1"
font-1 = "Monospace:pixelsize=10;1"

;; Modules
;; Discarded: i3 filesystem xbacklight memory cpu battery temperature powermenu
modules-left = bspwm
modules-center = xwindow
modules-right = battery sep date

;; Tray
tray-position = right
tray-padding = 1

;; Cursor
cursor-click = pointer
cursor-scroll = ns-resize

[global/wm]
margin-top = 5
margin-bottom = 5

[module/xwindow]
type = internal/xwindow
label = %title:0:75:...%

[module/date]
type = internal/date
interval = 10
date = 
date-alt = "%Y-%m-%d "
time = %H:%M
time-alt = %H:%M
label = " %date%%time%"

[module/sep]
type = custom/text
content = " |"

[module/bspwm]
type = internal/bspwm

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.primary}
label-focused-padding = 3

label-occupied = %name%
label-occupied-padding = 3

label-urgent = %name%!
label-urgent-background = ${colors.alert}
label-urgent-padding = 3

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 3

