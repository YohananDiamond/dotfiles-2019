#!/usr/bin/env python3
#
# Bash Prompt Generator
# This is a python script that generates a bash script.

try:

    # Imports
    import sys

    # Text Constants
    TXT_SYMBOL = r' Î» '
    TXT_PATH = r' \w '
    TXT_PS2 = r'...'
    TXT_USER = r'\u'
    TXT_INPUT = r' '

    # Colors
    COLOR_MAIN = r'\[\033[48;5;240m\]' + r'\[\033[38;5;253m\]' 
    COLOR_ALT = r'\[\033[48;5;243m\]' + r'\[\033[38;5;237m\]'
    COLOR_RESET = r'\[\033[m\]'

    # Basic Blocks
    BLOCK_SYMBOL = COLOR_MAIN + TXT_SYMBOL + COLOR_RESET
    BLOCK_SYMBOL2 = COLOR_MAIN + r' ... ' + COLOR_RESET
    BLOCK_PATH = COLOR_ALT + TXT_PATH + COLOR_RESET
    BLOCK_INPUT = TXT_INPUT

    # Mount Final Block

    BLOCK = ''

    if sys.argv[1] == '1':
        # PS1 Prompt
        BLOCK = BLOCK_SYMBOL + BLOCK_PATH + BLOCK_INPUT

    elif sys.argv[1] == '2':
        # PS2 Prompt
        BLOCK = BLOCK_SYMBOL2 + BLOCK_INPUT

    else:
        raise ValueError('Invalid Arguments')

    # Actually output the prompt blocks if successful
    print(BLOCK)

except e:

    # Error Handling
    print(f'{type(e).__name__}: {e}')
