#!/bin/sh
# Source: https://faq.i3wm.org/question/239/how-do-i-suspendlockscreen-and-logout.1.html

color="777777"

__lock() { i3lock -c "${color}"; }

case "$1" in
    lock)
        __lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        __lock && systemctl suspend
        ;;
    hibernate)
        __lock && systemctl hibernate
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|hibernate|reboot|shutdown}"
        exit 2
esac

exit 0
